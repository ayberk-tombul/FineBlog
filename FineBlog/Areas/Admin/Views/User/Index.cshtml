@model List<FineBlog.ViewModels.UserVM>


@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Register" asp-controller="User">Yeni Üye Kaydet</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">
                Üye Listesi
            </h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Aksiyon</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>
                                <a class="btn btn-secondary">Forget Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>